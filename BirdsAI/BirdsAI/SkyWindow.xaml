						<GradientStop Offset="1" Color="#FFDAD8A2"/>
					</LinearGradientBrush>
				</Canvas.Background>

				<Canvas.Resources>
					<Style x:Key="coords">
						<Setter Property="Canvas.Left" Value="{Binding X}"/>
						<Setter Property="Canvas.Top" Value="{Binding Y}"/>
					</Style>
					<Style TargetType="local:BirdView" BasedOn="{StaticResource coords}"/>
					<Style TargetType="Path">
						<Setter Property="Fill" Value="#FF87AC7F"/>
					</Style>
				</Canvas.Resources>

				<local:Cloud Canvas.Top="30"/>
